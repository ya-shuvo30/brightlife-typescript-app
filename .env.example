# Environment Configuration Template
# Copy this file to .env.local for local development
# Add your actual values and never commit sensitive data to git

# Development Environment
VITE_APP_NAME=BrightLife Bangladesh
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_VERSION=v1

# Mock API Mode (set to true for development without backend)
VITE_USE_MOCK_API=false

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Third-party Services
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_HOTJAR_ID=your-hotjar-id

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/brightlifebangladesh
VITE_TWITTER_URL=https://twitter.com/brightlifebangladesh
VITE_LINKEDIN_URL=https://linkedin.com/company/brightlifebangladesh

# Contact Information
VITE_CONTACT_EMAIL=info@brightlife-bd.com
VITE_CONTACT_PHONE=+880-1234-567890
VITE_SUPPORT_EMAIL=support@brightlife-bd.com

# Build Configuration
VITE_BUILD_DATE=auto-generated
VITE_GIT_COMMIT=auto-generated